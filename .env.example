# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nocodebackend
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-external-access
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-backend-domain.com

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External Services
NOCODEBACKEND_API_KEY=your-external-service-key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true

# Cache Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Widget Settings
DEFAULT_WIDGET_THEME=default
MAX_COMMENT_DEPTH=5
COMMENTS_PER_PAGE=50

# Admin Settings
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=change-this-password